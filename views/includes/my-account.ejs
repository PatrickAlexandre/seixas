<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h3 class="text-lg font-semibold">Compte</h3>
    <a href="/reset-password" class="text-gray-700 hover:text-blue-600 flex items-center space-x-2">
      <i class="fas fa-pencil-alt"></i>
      <span>Réinitialiser le Mot de Passe</span>
    </a>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <label class="block text-sm font-medium text-gray-700">Email</label>
      <input type="text" name="email" id="email" value="<%= account.email %>" 
             class="mt-1 block w-full px-3 py-2 bg-gray-100 border border-gray-300 rounded-md" disabled>
    </div>
    
    <div>
      <label class="block text-sm font-medium text-gray-700">Téléphone</label>
      <input type="text" name="phone" id="phone" value="<%= account.phone %>" 
             class="mt-1 block w-full px-3 py-2 bg-gray-100 border border-gray-300 rounded-md" disabled>
    </div>
    
    <div>
      <label class="block text-sm font-medium text-gray-700">Mot de Passe</label>
      <input type="password" name="password" id="password" value="**********" 
             class="mt-1 block w-full px-3 py-2 bg-gray-100 border border-gray-300 rounded-md" disabled>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700">Rang</label>
      <input type="text" name="numero_carte" id="numero_carte" 
             class="mt-1 block w-full px-3 py-2 bg-gray-100 border border-gray-300 rounded-md" disabled>
    </div>
  </div>
</div>
