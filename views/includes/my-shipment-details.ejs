<div class="mt-20 space-y-6">
  <div class="flex justify-between items-center">
    <h3 class="text-lg font-semibold">Adresse de Livraison</h3>
    <a href="/shipment" class="text-gray-700 hover:text-blue-600 flex items-center space-x-2">
      <i class="fas fa-pencil-alt"></i>
      <span>Modifier</span>
    </a>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <label class="block text-sm font-medium text-gray-700">Prénom</label>
      <input type="text" name="firstname" id="firstname" value="<%= shipmentAddress.firstname %>" 
             class="mt-1 block w-full px-3 py-2 bg-gray-100 border border-gray-300 rounded-md" disabled>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700">Nom</label>
      <input type="text" name="lastname" id="lastname" value="<%= shipmentAddress.lastname %>" 
             class="mt-1 block w-full px-3 py-2 bg-gray-100 border border-gray-300 rounded-md" disabled>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700">Téléphone / Mobile</label>
      <input type="number" name="phone" id="phone" value="<%= shipmentAddress.phone %>" 
             class="mt-1 block w-full px-3 py-2 bg-gray-100 border border-gray-300 rounded-md" disabled>
    </div>
    <div class="md:col-span-2">
      <label class="block text-sm font-medium text-gray-700">Adresse</label>
      <input type="text" name="address" id="address" value="<%= shipmentAddress.address %>" 
             class="mt-1 block w-full px-3 py-2 bg-gray-100 border border-gray-300 rounded-md" disabled>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700">Code Postal</label>
      <input type="text" name="postalcode" id="postalcode" value="<%= shipmentAddress.postalcode %>" 
             class="mt-1 block w-full px-3 py-2 bg-gray-100 border border-gray-300 rounded-md" disabled>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700">Ville</label>
      <input type="text" name="city" id="city" value="<%= shipmentAddress.city %>" 
             class="mt-1 block w-full px-3 py-2 bg-gray-100 border border-gray-300 rounded-md" disabled>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700">État / Région</label>
      <input type="text" name="state" id="state" value="<%= shipmentAddress.state %>" 
             class="mt-1 block w-full px-3 py-2 bg-gray-100 border border-gray-300 rounded-md" disabled>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700">Pays</label>
      <input type="text" name="country" id="country" value="<%= shipmentAddress.country %>" 
             class="mt-1 block w-full px-3 py-2 bg-gray-100 border border-gray-300 rounded-md" disabled>
    </div>
  </div>
</div>
